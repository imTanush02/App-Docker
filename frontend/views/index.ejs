<!DOCTYPE html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Docker Learning Journey</title>
    <!-- Tailwind CSS CDN with dark mode -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      // Check for saved user preference, if any, on load
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      
      // Toggle dark mode
      function toggleDarkMode() {
        if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          localStorage.theme = 'light';
        } else {
          document.documentElement.classList.add('dark');
          localStorage.theme = 'dark';
        }
      }
    </script>
    <script>
      // Add Tailwind config with dark mode
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              dark: '#1a1a2e',
              'dark-secondary': '#16213e',
            },
          },
        },
      };
    </script>
  </head>
  <body class="bg-gradient-to-r from-blue-50 to-indigo-100 dark:from-dark dark:to-dark-secondary min-h-screen transition-colors duration-300">
    <!-- Dark mode toggle button -->
    <button onclick="toggleDarkMode()" class="fixed top-4 right-4 p-2 rounded-full bg-white dark:bg-gray-800 shadow-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
      </svg>
    </button>
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-indigo-700 dark:text-indigo-400 mb-6 animate-bounce">
          It Was Fun Learning from you
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">Data from backend</p>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 mb-8 transition-colors duration-300">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% data.data.forEach((item) => { %>
            <div class="p-4 bg-indigo-50 dark:bg-gray-700 rounded-lg transition-colors duration-300">
              <h3 class="font-medium text-lg mb-2 text-gray-800 dark:text-gray-200"><%= item %></h3>
            </div>
            <% }) %>
          </div>
        </div>

        <div
          class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105"
        >
          Get Started with Docker
        </div>
      </div>
    </div>
  </body>
</html>
